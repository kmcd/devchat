<% cache message do %>
  <%= div_for(message, data:{ 'message-id' => message.id } ) do %>
    <%= content_tag :div, class:'timestamp' do %>
      <% timestamp = message.created_at %>
      <%= content_tag :span, timestamp.strftime("%Y %b %d %a"), class:'date',
            data:{date:timestamp.strftime('%-m-%-d')} %>
      <%= content_tag :span, timestamp.strftime("%R"), class:'time' %>
    <% end %>
  
    <%= content_tag :div, message.user.name, class:'user' %>
    <%= content_tag :div, message.input, class:'input' %>
  <% end %>
<% end %>
